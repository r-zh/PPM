# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page for public access
GET     /                           controllers.Application.index()

# User login
GET      /login                     cn.edu.sdu.sc.spepms.system.common.controllers.AuthController.login()
POST     /authenticate              cn.edu.sdu.sc.spepms.system.common.controllers.AuthController.authenticate()
GET      /logout                    cn.edu.sdu.sc.spepms.system.common.controllers.AuthController.logout()

GET     /users                      controllers.Application.users()

# User register
GET    /register                    cn.edu.sdu.sc.spepms.system.common.controllers.RegisterController.register()
POST   /register/save               cn.edu.sdu.sc.spepms.system.common.controllers.RegisterController.registerSave()

# Home page after user login
GET     /home/student               controllers.Application.studentHome()
GET     /home/teacher               controllers.Application.teacherHome()

# Articles
GET     /articles/add               controllers.Application.addArticle()

POST    /articles                   controllers.Application.saveArticle()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Project
GET     /project/publish            controllers.Application.publishProject()
GET     /project/show               controllers.Application.showProject()
#GET    /project/publish            cn.edu.sdu.sc.spepms.system.creation.controllers.ProjectsController.publishProject()

#Creation
GET     /creation/index                     cn.edu.sdu.sc.spepms.system.creation.controllers.project.ProjectController.index()
GET     /creation/Project/add               cn.edu.sdu.sc.spepms.system.creation.controllers.project.ProjectController.addProject()
GET     /creation/Project/details           cn.edu.sdu.sc.spepms.system.creation.controllers.project.ProjectController.details(id:Long)
GET     /creation/Project/introduce         cn.edu.sdu.sc.spepms.system.creation.controllers.project.ProjectController.showCreationProject()
GET     /creation/Project/apply             cn.edu.sdu.sc.spepms.system.creation.controllers.project.ProjectController.applyCreationProject()
POST    /creation/Project/save              cn.edu.sdu.sc.spepms.system.creation.controllers.project.ProjectController.saveProject()
GET     /creation/Project/pass              cn.edu.sdu.sc.spepms.system.creation.controllers.project.ProjectController.pass(id:Long)

#Laboratory
GET     /creation/lab/index                 cn.edu.sdu.sc.spepms.system.creation.controllers.lab.LabController.index()
