# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page for public access
GET    /                                         controllers.Application.index()

# User login
GET    /login                                    cn.edu.sdu.sc.spepms.system.common.controllers.AuthController.login()
POST   /authenticate                             cn.edu.sdu.sc.spepms.system.common.controllers.AuthController.authenticate()
GET    /logout                                   cn.edu.sdu.sc.spepms.system.common.controllers.AuthController.logout()

GET    /users                                    controllers.Application.users()
#GET    /users                                    cn.edu.sdu.sc.spepms.system.common.controllers.AuthController.view()

# User register
GET    /register                                 cn.edu.sdu.sc.spepms.system.common.controllers.RegisterController.register()
POST   /register                                 cn.edu.sdu.sc.spepms.system.common.controllers.RegisterController.registerSave()

# Home page after user login
GET    /home/student                             controllers.Application.studentHome()
GET    /home/teacher                             controllers.Application.teacherHome()

# Articles
GET    /articles/add                             controllers.Application.addArticle()
POST   /articles                                 controllers.Application.saveArticle()

# Project
GET    /projects/publish                         controllers.Application.publishProject()
GET    /projects/show                            controllers.Application.showProject()
#GET    /project/publish                          cn.edu.sdu.sc.spepms.system.creation.controllers.ProjectsController.publishProject()

# Creation
GET    /creation                                 cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.index()
GET    /creation/personHome                      cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.personHome()

GET    /creation/projects                        cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.list()
GET    /creation/projects/add                    cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.add()
GET    /creation/projects/edit                   cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.edit(projectId: Long)
POST   /creation/projects                        cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.save()
POST   /creation/projects/update                 cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.reSave(projectId: Long)

POST   /creation/projects/:projectId/approve     cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.approve(projectId: Long)
POST   /creation/projects/:projectId/reject      cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.reject(projectId: Long)
POST   /creation/projects/:projectId/kill        cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.kill(projectId: Long)

POST   /creation/projects/:projectId/submit      cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.submit(projectId: Long)
POST   /creation/projects/:projectId/join        cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.join(projectId: Long)

GET    /creation/projects/:projectId/applicate   cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.applicate(projectId: Long)
POST   /creation/projects/:projectId/leave       cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.leave(projectId: Long)

GET    /creation/projects/:projectId             cn.edu.sdu.sc.spepms.system.creation.projects.controllers.ProjectsController.view(projectId:Long)

# Laboratory
GET    /creation/labs                            cn.edu.sdu.sc.spepms.system.creation.labs.controllers.LabsController.index()

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file                             controllers.Assets.at(path="/public", file)
